            @@-webkit-keyframes square {
                0% {
                    -webkit-transform: translateY(0);
                    transform: translateY(0);
                }

                100% {
                    -webkit-transform: translateY(-700px) rotate(600deg);
                    transform: translateY(-700px) rotate(600deg);
                }
            }

            @@keyframes square {
                0% {
                    -webkit-transform: translateY(0);
                    transform: translateY(0);
                }

                100% {
                    -webkit-transform: translateY(-700px) rotate(600deg);
                    transform: translateY(-700px) rotate(600deg);
                }
            }

            #firstenter {
                opacity: 1;
                animation: firstent 5s;
            }

            @@keyframes firstent {
                0% {
                    opacity: 0;
                }

                100% {
                    opacity: 1;
                }
            }

            .anim1 {
                width: 20px;
                height: 20px;
                background: white;
                border-radius: 100px;
                position: absolute;
                left: 46%;
                top: 55%;
                animation: anim1 2s infinite;
                opacity: 0;
            }

            @@keyframes anim1 {
                0% {
                    opacity: 0;
                    transform: scale(0);
                }

                50% {
                    opacity: 1;
                    transform: scale(1);
                }

                100% {
                    opacity: 0;
                    transform: scale(0);
                }
            }

            .anim2 {
                width: 20px;
                height: 20px;
                background: white;
                border-radius: 100px;
                position: absolute;
                left: 49%;
                top: 55%;
                animation: anim2 2.5s infinite;
            }

            @@keyframes anim2 {
                0% {
                    opacity: 0;
                    transform: scale(0);
                }

                50% {
                    opacity: 1;
                    transform: scale(1);
                }

                100% {
                    opacity: 0;
                    transform: scale(0);
                }
            }

            .anim3 {
                width: 20px;
                height: 20px;
                background: white;
                border-radius: 100px;
                position: absolute;
                left: 52%;
                top: 55%;
                animation: anim3 3s infinite;
            }

            @@keyframes anim3 {
                0% {
                    opacity: 0;
                    transform: scale(0);
                }

                50% {
                    opacity: 1;
                    transform: scale(1);
                }

                100% {
                    opacity: 0;
